<div class="card-container">
  <div class="meet-container">
    <%= link_to "Back to Results", results_search_path, class: "btn btn-outline-primary rounded p-1 m-2" %>
    <%= link_to "Add a Spotting", '/spottings/(@bird-id)', class: "btn btn-outline-primary rounded p-1 m-2" %>
    <div>
      <h2 class="mt-3">Meet the <%= @bird.species %></h2>
    </div>
    <div class="card">
      <img src="<%= @bird.img_url %>">
      <div class="card-content">
        <h3><strong><%= @bird.scientific_name %></strong></h4>
        <div>
          <h4>Description:</h4>
          <p><%= @bird.description %></p>
        </div>
        <div>
          <h4>Birds' Song:</h4>
          <iframe src="https://xeno-canto.org/<%=@bird.audio_url%>/embed?simple=1" scrolling='no' frameborder='0' width='300' height='115'></iframe>
        </div>
        <div class="text-align-start">
          <h4>Distribution:</h4>
          <p><%= @bird.distribution %></p>
          <h4>Habitat:</h4>
          <p><%= @bird.habitat %></p>
        </div>
      </div>
    </div>
  </div>
</div>
