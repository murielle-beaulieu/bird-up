<div style="display: flex; justify-content: right; padding-right: 20px; padding-top: 20px;">
  <%= link_to "Search Again?", new_photo_path, class: "btn poke-button" %>
</div>

<h2 style="margin-top: 30px;">We think you saw a <%= @main_bird.scientific_name %>!</h2>

<div class="card-container">
  <div class="card main-card">
    <img src="<%= @main_bird.img_url %>">
    <div class="card-content">
      <h4><strong><%= @main_bird.scientific_name %></strong></h4>
      <h5><%= @main_bird.distribution %></h5>
      <h6><%= @main_bird.habitat %></h6>
      <%= link_to "Learn More", show_bird_path(@main_bird), class: "btn poke-button" %>
    </div>
  </div>
</div>

<h3 style="margin-top: 10px;">See other possible options</h3>

<div class="card-container">
  <% @other_birds.each do |bird| %>
    <div class="card">
      <img src="<%= bird.img_url %>">
      <div class="card-content">
        <h4><strong><%= bird.scientific_name %></strong></h4>
        <h5><%= bird.distribution %></h5>
        <h6><%= bird.habitat %></h6>
        <%= link_to "Learn More", show_bird_path(bird), class: "btn poke-button" %>
      </div>
    </div>
  <% end %>
</div>
