<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid" style="position: relative;">
    <%= link_to "/", class: "navbar-brand" do %>
      <h2 style="margin: 0;">BirdUp!</h2>
    <% end %>
      <% if user_signed_in? %>

        <%# Inline Menu %>
        <div class="hide" style="display: flex;  align-items: center; gap: 20px;">
          <div class="hide" style="display: flex;  align-items: center; gap: 20px;">
            <%= link_to "Search Bird", new_photo_path, class: "navbar-link hide" %>
            <%= link_to "Spottings", spottings_path, class: "navbar-link hide" %>
            <%= link_to "Rankings", ranking_index_path, class: "navbar-link hide" %>
            <%= link_to "Chatroom", chatroom_path(@chatroom), class: "navbar-link hide" %>
          </div>
          <div>
            <a href="#" class="avatar hide" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <% if current_user.image.attached? %>
                <%= cl_image_tag current_user.image.key, class: "avatar hide", alt: "dropdown menu" %>
              <% else %>
                <%= image_tag "https://www.shutterstock.com/image-vector/blank-avatar-photo-place-holder-600nw-1095249842.jpg", class: "avatar hide", style: "margin-left: -10px;", alt: "dropdown menu" %>
              <% end %>
            </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Edit Profile", edit_user_registration_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </div>
        </div>


        <%# Dropdown Menu %>

        <div class="mobile">
          <a href="#" class="avatar mobile" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <% if current_user.image.attached? %>
              <%= image_tag current_user.image, class: "avatar mobile", alt: "dropdown menu" %>
            <% else %>
              <%= image_tag "https://www.shutterstock.com/image-vector/blank-avatar-photo-place-holder-600nw-1095249842.jpg", class: "avatar mobile", style: "margin-left: -10px;", alt: "dropdown menu" %>
            <% end %>
          </a>
          <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
            <%= link_to "Search Bird", new_photo_path, class: "dropdown-item" %>
            <%= link_to "Spottings", spottings_path, class: "dropdown-item" %>
            <%= link_to "Rankings", ranking_index_path, class: "dropdown-item" %>
            <%= link_to "Chatroom", chatroom_path(@chatroom), class: "dropdown-item" %>
            <%= link_to "Edit Profile", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
          </div>
        </div>
      <% else %>
        <div class="list">
            <%= link_to "Log In", new_user_session_path, class: "nav-link" %>
            <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
        </div>
      <% end %>
  </div>
</div>
