<div style="display: flex; justify-content: right; padding-right: 20px; padding-top: 20px;">
  <%= link_to "Back To Spottings", spottings_path, class: "btn poke-button" %>
</div>

  <div style="margin: 28px auto;">
    <h2 class="mt-3">Update your spotting of the <%= @bird.species %></h2>
  </div>
  <div class="card show-bird" style="margin: 0 auto;">
    <img src="<%= @bird.img_url %>">
    <div class="card-content">
      <h3><%= @bird.species %></h3>
      <h5><em><%= @bird.scientific_name %></em></h5>
      <h4>Location: <%= @spotting.location %></h4>
      <h4>Date: <%= @spotting.date %></h4>
    </div>
  </div>
  <h2 class="mt-3">Enter the details of this spotting:</h2>
  <div class="form-container">
    <%= simple_form_for @spotting, url: spotting_path, method: :patch do |f| %>
      <%= f.input :bird_id, :as => :hidden, :input_html => { :value => params[:id] } %>
      <%= f.input :location %>
      <%= f.input :date,
        as: :string,
        input_html: { data: { controller: "datepicker" } }%>
      <%= f.button :submit, class:'poke-button' %>
    <% end %>
  </div>
</div>
