<h2 style="margin-top: 30px;">Your Spotted List</h2>

<div style="display: flex; justify-content: right; padding-right: 28px; padding-top: 20px;">
  <%= link_to "Map View", mapview_spottings_path, class: "btn poke-button" %>
</div>


<div class="card-container">
  <% @spottings.each do |spotting| %>
    <div class="card">
      <img src="<%= spotting.bird.img_url %>">
      <div class="card-content", style="line-height: 0.5px;">
        <h4><strong><%= spotting.bird.species %></strong></h4>
        <h5>Location:</h5>
        <p><%= spotting.location %></p>
        <h5>Date:</h5>
        <p><%= spotting.date %></p>
      </div>
        <%= link_to "See more", spotting_path(spotting), class: "btn poke-button mx-3 mb-3" %>
      </div>
    <% end %>
</div>
